<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePaletteOptionsFragment">

    <TextView
        android:id="@+id/textViewCreatePaletteOptionsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/create_new_palette"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCreatePaletteOptionsTakePhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/take_photo"
        app:layout_constraintEnd_toEndOf="@+id/buttonCreatePaletteOptionsAddPhoto"
        app:layout_constraintStart_toStartOf="@+id/buttonCreatePaletteOptionsAddPhoto"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreatePaletteOptionsHeader" />

    <Button
        android:id="@+id/buttonCreatePaletteOptionsAddPhoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/add_photo"
        app:layout_constraintEnd_toEndOf="@+id/buttonCreatePaletteOptionsManuallyAddColors"
        app:layout_constraintStart_toStartOf="@+id/buttonCreatePaletteOptionsManuallyAddColors"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreatePaletteOptionsTakePhoto" />

    <Button
        android:id="@+id/buttonCreatePaletteOptionsManuallyAddColors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/manually_add_colors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCreatePaletteOptionsAddPhoto" />
</androidx.constraintlayout.widget.ConstraintLayout>